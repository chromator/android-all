<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FontSmallBlack" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FontMediumBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FontMediumBlackBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontLargeBlack" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FontXtraLargeBlack" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextHeader" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextButton" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextWhiteShadow" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextAppearance.Sherlock.Widget.ActionBar.Title" parent="@style/TextWhiteShadow">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>