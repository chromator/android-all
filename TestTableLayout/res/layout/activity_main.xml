<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="1."
                android:textColor="#000000" />

            <TextView
                android:layout_column="1"
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="Open..."
                android:textColor="#000000" />

            <TextView
                android:background="@drawable/cell_shape"
                android:gravity="right"
                android:padding="5dip"
                android:text="Ctrl-O"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="1."
                android:textColor="#000000" />

            <TextView
                android:layout_column="1"
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="Save..."
                android:textColor="#000000" />

            <TextView
                android:background="@drawable/cell_shape"
                android:gravity="right"
                android:padding="5dip"
                android:text="Ctrl-S"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="1."
                android:textColor="#000000" />

            <TextView
                android:layout_column="1"
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="Save As..."
                android:textColor="#000000" />

            <TextView
                android:background="@drawable/cell_shape"
                android:gravity="right"
                android:padding="5dip"
                android:text="Ctrl-Shift-S"
                android:textColor="#000000" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="1."
                android:textColor="#000000" />

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="X"
                android:textColor="#000000" />

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="Import..."
                android:textColor="#000000" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="3dip"
                android:text="X" />

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="Export..."
                android:textColor="#000000" />

            <TextView
                android:background="@drawable/cell_shape"
                android:gravity="right"
                android:padding="5dip"
                android:text="Ctrl-E"
                android:textColor="#000000" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="1."
                android:textColor="#000000" />

            <TextView
                android:layout_column="1"
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="1."
                android:textColor="#000000" />

            <TextView
                android:layout_column="1"
                android:background="@drawable/cell_shape"
                android:padding="5dip"
                android:text="Quit"
                android:textColor="#000000" />
        </TableRow>
        <include android:id="@+id/inc_row1" layout="@layout/table_row"/>
    </TableLayout>

</RelativeLayout>