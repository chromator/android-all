<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TextFontStyleActivity" >

    <TextView
        android:id="@+id/text1"
        style="@style/FontSmallBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text2"
        style="@style/FontMediumBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text3"
        style="@style/FontMediumBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text4"
        style="@style/FontLargeBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text5"
        style="@style/FontXtraLargeBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text6"
        style="@style/TextHeader"
        android:background="@color/background_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text5"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text7"
        style="@style/TextButton"
        android:background="@color/background_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text6"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text8"
        style="@style/TextAppearance.Sherlock.Widget.ActionBar.Title"
        android:background="@color/background_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text7"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/text9"
        style="@style/TextWhiteShadow"
        android:background="@color/background_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text8"
        android:text="@string/hello_world" />

</RelativeLayout>